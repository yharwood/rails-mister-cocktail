<div class="container mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
  <h1><%= @cocktail.name %></h1>
</div>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %></p>
    <p><%= dose.ingredient.name %></p>
    <%= link_to "Delete",dose_path(dose), :method => "delete", data: {confirm: "Are you sure you want to delete this?"}, class:'btn btn-primary mt-2'
    %>
  <% end %>
  <%= link_to "Back to index", :root , class:'btn btn-primary mt-2'%>
</div>
<%= link_to "Add New Dose", new_cocktail_dose_path(@cocktail) , class: 'btn btn-primary mt-2' %>
